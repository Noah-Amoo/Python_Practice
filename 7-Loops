                                    # Loops
# While Loop
# Use the while loop to repeat a block of code while a condition is True.
print('\nThe while loop repeats a block of code while a condition is True.')
i = 1
while i <= 5:
    print(i)
    i += 1

j = 1
while j <= 10:
    print(j * '*')
    j += 1